# Git abbreviations
abbr -a --set-cursor g git
abbr -a --set-cursor ga 'git add'
abbr -a --set-cursor gc 'git commit'
abbr -a --set-cursor gca 'git commit --amend'
abbr -a --set-cursor gco 'git checkout'
abbr -a --set-cursor gcp 'git cherry-pick'
abbr -a --set-cursor gd 'git diff'
abbr -a --set-cursor gds 'git diff --staged'
abbr -a --set-cursor gl 'git pull'
abbr -a --set-cursor gp 'git push'
abbr -a --set-cursor gpf 'git push --force-with-lease'
abbr -a --set-cursor gs 'git status'
abbr -a --set-cursor glog 'git log --oneline --graph --decorate'

# Homebrew abbreviations
abbr -a --set-cursor brewup 'brew update && brew upgrade && brew cleanup'
